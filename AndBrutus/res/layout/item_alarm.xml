<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <ImageView
        android:id="@+id/typeContent"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:paddingLeft="16dp"
        android:paddingTop="8dp"
        android:src="@drawable/led_green"
        android:textColor="@color/grey_100"
        android:textSize="12sp" 
        android:contentDescription="@string/settings_contentDescription"/>

    <TextView
        android:id="@+id/typeParam"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="19dp"
        android:layout_toRightOf="@+id/typeContent"
        android:gravity="center"
        android:paddingLeft="19dp"
        android:paddingTop="8dp"
        android:textColor="@color/grey_800"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/texts"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_toRightOf="@+id/typeParam"
        android:gravity="right"
        android:paddingLeft="16dp"
        android:paddingRight="8dp"
        android:paddingTop="8dp"
        android:textColor="@color/grey_600"
        android:textSize="12sp" />

</RelativeLayout>