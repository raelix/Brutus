<transitionSet xmlns:android="http://schemas.android.com/apk/res/android"
    android:transitionOrdering="together" >

    <transition class="com.brutus.andbrutus.view.Scale" >
        <targets>
            <target android:targetId="@id/valueDef" />
        </targets>
    </transition>

    <changeBounds
        android:duration="500"
        android:interpolator="@android:interpolator/anticipate_overshoot" >
        <targets>
            <target android:targetId="@id/nameDesc" />
        </targets>
    </changeBounds>

    <fade
        android:duration="500"
        android:fadingMode="fade_in" >
        <targets>
            <target android:targetId="@id/nameDesc" />
        </targets>
    </fade>

</transitionSet>